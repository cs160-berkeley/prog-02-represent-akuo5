<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="akuo.represent.RepViewPhone"
    tools:deviceIds="wear_round"
    android:id="@+id/view_phone"
    android:clickable="true">

    <TextView android:id="@+id/text" android:layout_width="wrap_content"
        android:layout_height="50dp" android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" android:text="View on Phone"
        android:layout_gravity="center_horizontal|bottom" />

    <ImageButton
        android:id="@+id/view_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/phone"
        android:layout_gravity="center"
        android:onClick="clickMethod"/>

</FrameLayout>
